<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Green1"
    tools:context=".login">

    <!-- TextViews and other views remain unchanged -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:text=""/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login "
        android:textColor="@color/green8"
        android:layout_marginTop="130dp"
        android:textSize="60dp"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="@font/playfair_display"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/aroubaz"
        android:layout_marginTop="299dp"
        android:layout_marginStart="20dp"/>

    <View
        android:layout_width="1dp"
        android:layout_height="47dp"
        android:background="@color/black"
        android:layout_marginStart="90dp"
        android:layout_marginTop="339dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailTextInputLayout"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-86dp"
        android:elevation="6dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email"
            android:paddingStart="60dp"
            android:paddingTop="-0dp"
            android:textSize="15dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/mftah"
        android:layout_marginTop="365dp"
        android:layout_marginStart="15dp"/>

    <View
        android:layout_width="1dp"
        android:layout_height="47dp"
        android:background="@color/black"
        android:layout_marginStart="90dp"
        android:layout_marginTop="407dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Password"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:elevation="6dp"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password"
            android:paddingStart="60dp"
            android:textSize="15dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/cadna"
        android:layout_marginTop="450dp"
        android:layout_marginStart="25dp"/>

    <View
        android:layout_width="1dp"
        android:layout_height="47dp"
        android:background="@color/black"
        android:layout_marginStart="90dp"
        android:layout_marginTop="480dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/codeTextInputLayout"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:elevation="6dp"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Code"
            android:paddingStart="60dp"
            android:textSize="15dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/Sign_in"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginStart="0sp"
        android:layout_marginTop="400sp"
        android:background="@drawable/boutton"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/alice"
        android:hint="Login"
        android:textColorHint="@color/black"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="680dp"
        android:text="already have account?"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/playfair_display"/>

    <TextView
        android:id="@+id/Sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="270dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="680dp"
        android:fontFamily="@font/playfair_display"
        android:text="Signin"
        android:textColor="@color/green8"
        android:textSize="22dp"
        android:textStyle="bold" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>