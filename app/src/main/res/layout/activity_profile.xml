<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".profile">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="-20dp"
        android:background="@drawable/framsetting"/>

    <ImageView
        android:id="@+id/back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="9dp"
        android:src="@drawable/baseline_arrow_back_ios_new_24"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userProfileImage"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/baseline_circle_24"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="150dp"
        android:layout_marginStart="230dp"
        android:background="@drawable/addprfl"/>

    <ImageView
        android:id="@+id/plus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="230dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/baseline_add_24" />

    <TextView
        android:id="@+id/usernameTextView1"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="Username"
        android:layout_marginTop="210sp"
        android:textAlignment="center"
        android:fontFamily="@font/aclonica"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <FrameLayout
        android:layout_width="340dp"
        android:layout_height="440dp"
        android:layout_gravity="center"
        android:layout_marginTop="230sp"
        android:background="@drawable/frame"
        android:elevation="10dp">

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/frame"
            android:elevation="12dp">

            <TextView
                android:id="@+id/usernameTextView2"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="UserName"
                android:textStyle="bold"
                android:fontFamily="@font/alice"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginStart="70dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ffffffffffff"
                android:layout_marginTop="-15dp"
                android:layout_marginStart="-10dp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginTop="140dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/frame"
            android:elevation="12dp">

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Email"
                android:textStyle="bold"
                android:fontFamily="@font/alice"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginStart="70dp"/>

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/emaillllllllllllll"
                android:layout_marginTop="-33dp"
                android:layout_marginStart="-25dp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginTop="240dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/frame"
            android:elevation="12dp">

            <TextView
                android:id="@+id/passwordTextView"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Password"
                android:fontFamily="@font/alice"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginStart="70dp"/>

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/passworddddddddddddd"
                android:layout_marginTop="-60dp"
                android:layout_marginStart="-50dp"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/logout"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginTop="340dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/frame"
            android:elevation="12dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Logout"
                android:fontFamily="@font/alice"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginStart="70dp"
                android:textColor="@color/rouge"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logout"
                android:layout_marginTop="-15dp"/>
        </FrameLayout>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
