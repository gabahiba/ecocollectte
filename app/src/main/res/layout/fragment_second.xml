<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:background="@drawable/framehome"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp">

        <TextView
            android:id="@+id/textViewSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanks to artificial intelligence "
            android:fontFamily="@font/alice"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="23sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/alice"
            android:text=" you can know the exact "
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" percentage of residue "
            android:fontFamily="@font/alice"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_marginTop="70dp"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" in the image "
            android:fontFamily="@font/alice"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_marginTop="100dp"
            android:layout_marginStart="20dp"/>
        <ImageView
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_marginStart="190dp"
            android:layout_marginTop="-30dp"
            android:src="@drawable/aiwahd"/>
        <Button
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:text="test it"
            android:layout_marginTop="130dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/frame"
            android:fontFamily="@font/alice"
            android:textStyle="bold"
            android:elevation="30dp"/>
    </FrameLayout>
</RelativeLayout>